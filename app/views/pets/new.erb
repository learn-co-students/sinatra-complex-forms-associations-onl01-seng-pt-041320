<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
    <label>Name: </label>
    
    <br>

    <input type="text" name="pet["name]">
    
    <br>

    <p>Select an existing Owner or create a new one below.</p>

    <h3>Existing Owners</h3>

    <% @owners.each do |o| %>
        <input type="checkbox" name="pet[owner_ids][]" id="<%o.id%>" value="<%= o.id %>"><%= o.name %>
    <%end%>
    <br>

    <h3>New Owner</h3>
    <label>Owner Name:</label>
    
    <br>

    <input type="text" name="owner[name]" id="pet_name">
    <br><br>

    <input type="submit" value="Create Pet">

</form>
