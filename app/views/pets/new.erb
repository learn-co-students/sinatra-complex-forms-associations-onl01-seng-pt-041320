    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" <%= owner.name%> value="<%= owner.id %>"><br>
  <% end %>
  <br>

  <h3>New Owner</h3>
  <label>Owner Name:</label>
  <br>
  <input type="text" name="owner[name]" id="owner_name"m></input>
  <br><br>

