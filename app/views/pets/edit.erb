<h1>Update Pet</h1>

<h2>Edit Pets Name:<%= @pet.name %></h2>

<form action="/pets/<%= @pet.id %>" method="post">
<input type="hidden" name="_method" id="hidden" value="patch">
  <label>Edit Pets Name:</label>
  <br> 
  <input type="text" name="pet[name]" value="<%= @pet.name%>" id="pet_name"></input>
  <br>
  <p>Select an existing owner or create a new one below</p>
  <br>
  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %> 
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner %>>
    <%=owner.name%></input>
    <br>
    <% end %>
    <br>

    <h3>New Owner</h3>
    <label> Owner Name:</label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br></br>
    <input type="submit" value="Update Pet">
</form>


