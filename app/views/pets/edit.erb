<h1>Update Pet</h1>

<form method="POST" action="/pets/<%= @pet.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pets Name:</label>
    <br>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
 
    <br>
    <p>Select an existing pet or create a new one below.</p>
 
 
    <h3>Existing Owners</h3>
    <% @owners.each do |o| %>
      <input type="radio" name="pet[owner_id]" id="<%= o.id %>" value="<%= o.id %>" 
      <%="checked" if @pet.owner == o %>><%= o.name %>
    <% end %>
    <br>
 
    <h3>New Owner</h3>
    <label>Pet Owner: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>
 
    <input type="submit" value="Update Pet">
</form>


